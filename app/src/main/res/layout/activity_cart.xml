<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beans_background"
    android:orientation="vertical"
    tools:context=".CartActivity">

    <TextView
        android:id="@+id/tv_orderSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="10dp"
        android:text="Order Summary:"
        android:textAlignment="center"
        android:textSize="30sp"
        android:background="#F2F2F2"/>

    <TextView
        android:id="@+id/tv_cart_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_orderSummary"
        android:text="Cart Items:"
        android:textSize="20sp"
        android:background="#F2F2F2" />
    <TextView
        android:id="@+id/tv_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cart_items"
        android:text="Tax:"
        android:textSize="20sp"
        android:background="#F2F2F2"/>

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tax"
        android:text="Total Price: $0.00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#F2F2F2"/>

    <Button
        android:id="@+id/btnBackToMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="27dp"
        android:text="Back to Menu" />
</RelativeLayout>